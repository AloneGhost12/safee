{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "test/**/*",
    "dist/**/*",
    "node_modules/**/*",
    "**/*.test.ts",
    "**/*.test.js",
    "vitest.config.ts",
    "vitest.config.js"
  ]
}
