{
  "name": "pv-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "rmdir /s /q dist 2>nul || echo \"Directory cleared\" && tsc --skipLibCheck true --noEmit false --noImplicitAny false",
    "build:render": "chmod +x build.sh && ./build.sh",
    "build:clean": "rm -rf dist && npm run build",
    "build:production": "npm ci --omit=dev && npm run build:clean",
    "start": "node dist/index.js",
    "start:production": "NODE_ENV=production node dist/index.js",
    "docker:build": "docker build -t vault-server .",
    "docker:run": "docker run -p 4000:4000 --env-file .env vault-server",
    "deploy:render": "git push render main",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "vitest",
    "test:unit": "vitest run --coverage",
    "test:ci": "node ../ci-test-runner.js || node ../ci-test-simple.js",
    "test:unit:watch": "vitest",
    "test:integration": "vitest run test/**/*.integration.test.ts",
    "test:coverage": "vitest run --coverage",
    "test:all": "npm run test:unit && npm run test:integration",
    "prestart": "npm run build",
    "security:validate": "node ../scripts/validate-security.js",
    "security:audit": "npm audit --audit-level moderate",
    "security:check": "npm run security:validate && npm run security:audit",
    "health:check": "curl -f http://localhost:4000/api/health || exit 1"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.883.0",
    "@aws-sdk/s3-request-presigner": "^3.883.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.13",
    "@types/nodemailer": "^7.0.1",
    "@types/ws": "^8.18.1",
    "argon2": "^0.30.0",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-slow-down": "^3.0.0",
    "helmet": "^6.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^5.0.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.6",
    "otplib": "^12.0.1",
    "pino": "^8.0.0",
    "pino-http": "^10.5.0",
    "typescript": "^5.0.0",
    "uuid": "^12.0.0",
    "ws": "^8.18.3",
    "zod": "^3.20.0"
  },
  "devDependencies": {
    "@types/supertest": "^2.0.12",
    "eslint": "^8.0.0",
    "supertest": "^6.3.3",
    "ts-node-dev": "^2.0.0",
    "vitest": "^1.0.0"
  }
}
