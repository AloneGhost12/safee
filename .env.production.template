# Production Environment Configuration Template
# Copy this file to .env.production and fill in the secure values

# === CRITICAL SECURITY SETTINGS ===

# Database URL (use secure connection with SSL)
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/vault?retryWrites=true&w=majority&ssl=true

# JWT Secrets (generate strong, unique secrets for production)
ACCESS_TOKEN_SECRET=your-super-secure-access-token-secret-min-32-chars
REFRESH_TOKEN_SECRET=your-super-secure-refresh-token-secret-min-32-chars

# CORS Origins (comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOW_NO_ORIGIN=false

# === APPLICATION SETTINGS ===

# Environment
NODE_ENV=production

# Server Configuration
PORT=4000
HOST=0.0.0.0

# Application Name
VITE_APP_NAME=PersonalVault

# === COOKIE SECURITY ===

# Session cookie name
SESSION_COOKIE_NAME=pv_sess

# Cookie domain (set for your production domain)
COOKIE_DOMAIN=.yourdomain.com

# === PROXY SETTINGS ===

# Trust proxy settings (if behind reverse proxy like Nginx/Cloudflare)
TRUST_PROXY=true
TRUSTED_PROXIES=127.0.0.1,::1

# === FILE STORAGE ===

# S3/R2 Configuration
S3_BUCKET_NAME=your-vault-files-bucket
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key
S3_ENDPOINT=https://your-s3-endpoint.com

# Cloudinary Configuration (optional)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret
CLOUDINARY_UPLOAD_URL=https://api.cloudinary.com/v1_1/your-cloud/upload

# === SECURITY MONITORING ===

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
SECURITY_HEADERS_ENABLED=true

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=365

# === OPTIONAL INTEGRATIONS ===

# Email Service (for security alerts)
EMAIL_SERVICE_API_KEY=your-email-service-key
SECURITY_ALERT_EMAIL=security@yourdomain.com

# Monitoring/SIEM Integration
SIEM_WEBHOOK_URL=https://your-siem-service.com/webhook

# === DEVELOPMENT OVERRIDES ===
# These should NOT be set in production

# DEV_DISABLE_RATE_LIMITING=false
# DEV_ALLOW_HTTP=false
# DEV_VERBOSE_ERRORS=false
